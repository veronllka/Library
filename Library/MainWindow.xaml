<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Библиотека - Главное окно" MinHeight="700" MinWidth="1200" 
        WindowState="Normal" WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        ResizeMode="CanResizeWithGrip" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowDrop="True">

    <Window.Resources>
        <!-- Liquid Glass стили -->
        <Style x:Key="GlassCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="25" ShadowDepth="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#50FFFFFF" Offset="0"/>
                        <GradientStop Color="#30FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#70FFFFFF" Offset="0"/>
                                            <GradientStop Color="#50FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#30FFFFFF" Offset="0"/>
                                            <GradientStop Color="#10FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#20FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Расширенные анимации -->
        <Storyboard x:Key="WindowLoadAnimation">
            <DoubleAnimation Storyboard.TargetName="MainGrid" 
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SidePanel" 
                           Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                           From="-150" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainContentArea" 
                           Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                           From="100" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="ContentSlideAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                           From="15" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="FloatingParticleAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                           From="0" To="-30" Duration="0:0:4">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                           From="0" To="20" Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="PulsingGlowAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.2" To="0.4" Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                           From="1" To="1.15" Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                           From="1" To="1.15" Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="RotatingIconAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:8">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowLoadAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="MainGrid">
        <!-- Фон с градиентом -->
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="0.3"/>
                <GradientStop Color="#334155" Offset="0.7"/>
                <GradientStop Color="#475569" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Анимированные частицы фона -->
        <Canvas IsHitTestVisible="False" ClipToBounds="True">
            <!-- Крупные элементы -->
            <Ellipse Width="400" Height="400" Fill="{StaticResource PrimaryColor}" 
                     Canvas.Left="-100" Canvas.Top="-50" Opacity="0.06">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource PulsingGlowAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Ellipse Width="300" Height="300" Fill="{StaticResource SecondaryColor}" 
                     Canvas.Right="-80" Canvas.Top="100" Opacity="0.08">
                <Ellipse.RenderTransform>
                    <TranslateTransform/>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FloatingParticleAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Ellipse Width="250" Height="250" Fill="{StaticResource AccentColor}" 
                     Canvas.Left="300" Canvas.Bottom="-50" Opacity="0.10">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource PulsingGlowAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <!-- Мелкие частицы -->
            <Ellipse Width="60" Height="60" Fill="{StaticResource PrimaryLightColor}" 
                     Canvas.Left="150" Canvas.Top="80" Opacity="0.3"/>
            <Ellipse Width="40" Height="40" Fill="{StaticResource SecondaryColor}" 
                     Canvas.Right="200" Canvas.Bottom="150" Opacity="0.25"/>
            <Ellipse Width="50" Height="50" Fill="{StaticResource AccentColor}" 
                     Canvas.Left="500" Canvas.Bottom="300" Opacity="0.35"/>
            <Ellipse Width="70" Height="70" Fill="{StaticResource PrimaryColor}" 
                     Canvas.Right="400" Canvas.Top="120" Opacity="0.2"/>
        </Canvas>

        <!-- Основная разметка с адаптивным дизайном -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" MinWidth="280" MaxWidth="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковая панель - адаптивная -->
            <Border x:Name="SidePanel" Grid.Column="0" Style="{StaticResource GlassCard}" 
                    Margin="20,20,10,20" Padding="0">
                <Border.RenderTransform>
                    <TranslateTransform/>
                </Border.RenderTransform>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Заголовок с информацией о пользователе -->
                        <Border Background="{StaticResource PrimaryGradient}" CornerRadius="16,16,0,0" Padding="25,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <iconPacks:PackIconMaterial Kind="Library" Width="40" Height="40" 
                                                              Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,12,0">
                                        <iconPacks:PackIconMaterial.RenderTransform>
                                            <RotateTransform/>
                                        </iconPacks:PackIconMaterial.RenderTransform>
                                        <iconPacks:PackIconMaterial.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard Storyboard="{StaticResource RotatingIconAnimation}"/>
                                            </EventTrigger>
                                        </iconPacks:PackIconMaterial.Triggers>
                                    </iconPacks:PackIconMaterial>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="БИБЛИОТЕКА" FontSize="20" FontWeight="Bold" 
                                                  Foreground="{StaticResource TextPrimaryColor}"/>
                                        <TextBlock Text="Система управления" FontSize="12" 
                                                  Foreground="#E0FFFFFF"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <Border Background="#20FFFFFF" CornerRadius="10" Padding="15">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <iconPacks:PackIconMaterial x:Name="UserRoleIcon" Kind="Account" Width="20" Height="20" 
                                                                      Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                            <TextBlock x:Name="UserNameText" Text="Имя пользователя" FontSize="14" FontWeight="SemiBold"
                                                      Foreground="{StaticResource TextPrimaryColor}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="Key" Width="16" Height="16" 
                                                                      Foreground="{StaticResource WarningColor}" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="UserRoleText" Text="Роль" FontSize="12"
                                                      Foreground="{StaticResource WarningColor}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Статистика -->
                        <StackPanel Margin="20,20,20,10">
                            <TextBlock Text="📊 Статистика" FontSize="16" FontWeight="SemiBold"
                                      Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Карточки статистики -->
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource GlassCard}" 
                                       Margin="0,0,5,5" Padding="12,8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <iconPacks:PackIconMaterial Kind="Book" Width="24" Height="24" 
                                                                  Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TotalBooksText" Text="0" FontSize="18" FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryColor}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Книг" FontSize="10" 
                                                  Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource GlassCard}" 
                                       Margin="5,0,0,5" Padding="12,8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <iconPacks:PackIconMaterial Kind="AccountGroup" Width="24" Height="24" 
                                                                  Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TotalReadersText" Text="0" FontSize="18" FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryColor}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Читателей" FontSize="10" 
                                                  Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource GlassCard}" 
                                       Margin="0,5,5,0" Padding="12,8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <iconPacks:PackIconMaterial Kind="HandHeart" Width="24" Height="24" 
                                                                  Foreground="{StaticResource AccentColor}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="ActiveLoansText" Text="0" FontSize="18" FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryColor}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Выдано" FontSize="10" 
                                                  Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource GlassCard}" 
                                       Margin="5,5,0,0" Padding="12,8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <iconPacks:PackIconMaterial Kind="AlertCircle" Width="24" Height="24" 
                                                                  Foreground="{StaticResource ErrorColor}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="OverdueLoansText" Text="0" FontSize="18" FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryColor}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Просрочек" FontSize="10" 
                                                  Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!-- Навигационные кнопки -->
                        <StackPanel Margin="20,10,20,20">
                            <TextBlock Text="📋 Управление" FontSize="16" FontWeight="SemiBold"
                                      Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,0,15"/>

                            <!-- Боковое меню -->
                            <StackPanel Grid.Row="1">
                                <Button Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="books">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="BookOutline" Width="20" Height="20" />
                                        <TextBlock Text="Книги" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="AuthorsButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="authors">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="AccountOutline" Width="20" Height="20" />
                                        <TextBlock Text="Авторы" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="ReadersButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="readers">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="AccountGroupOutline" Width="20" Height="20" />
                                        <TextBlock Text="Читатели" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="LoansButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="loans">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="CalendarClockOutline" Width="20" Height="20" />
                                        <TextBlock Text="Выдачи" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="reports" x:Name="ReportsMenuButton">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ChartBar" Width="20" Height="20" />
                                        <TextBlock Text="Отчеты" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="IssueBookButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="issueBook">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="BookArrowRight" Width="20" Height="20" />
                                        <TextBlock Text="Выдать книгу" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="BookReturnButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="bookReturn">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="BookArrowLeft" Width="20" Height="20" />
                                        <TextBlock Text="Возврат книги" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="BackupDatabaseButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="backupDatabase">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="DatabaseSync" Width="20" Height="20" />
                                        <TextBlock Text="Резервное копирование" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="ExportButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="export">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Download" Width="20" Height="20" />
                                        <TextBlock Text="Экспорт данных" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="ImportButton" Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="import">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Upload" Width="20" Height="20" />
                                        <TextBlock Text="Импорт данных" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="linq" x:Name="LinqButton">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="CodeJson" Width="20" Height="20" />
                                        <TextBlock Text="Демо LINQ" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="advanced_db" x:Name="AdvancedDatabaseButton">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="DatabaseCogOutline" Width="20" Height="20" />
                                        <TextBlock Text="Сложные объекты БД" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" Click="NavigationButton_Click" Tag="sql_admin" x:Name="SqlAdminButton">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="DatabaseSettings" Width="20" Height="20" />
                                        <TextBlock Text="Администрирование SQL Server" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Кнопка выхода -->
                            <Button x:Name="LogoutButton" Style="{StaticResource ErrorButton}" 
                                   Margin="0,20,0,0" Click="LogoutButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Logout" Width="18" Height="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="Выйти"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Основная область контента - адаптивная -->
            <Border x:Name="MainContentArea" Grid.Column="1" Style="{StaticResource GlassCard}" 
                    Margin="10,20,20,20" Padding="0">
                <Border.RenderTransform>
                    <TranslateTransform/>
                </Border.RenderTransform>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок с кнопками быстрых действий -->
                    <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" 
                           CornerRadius="16,16,0,0" Padding="30,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock x:Name="CurrentSectionText" Text="Добро пожаловать!" 
                                          FontSize="24" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="CurrentSectionDescription" 
                                          Text="Выберите раздел для работы с системой"
                                          FontSize="14" Foreground="#E0FFFFFF"/>
                            </StackPanel>

                            <!-- Кнопки быстрых действий -->
                            <StackPanel x:Name="QuickActionsPanel" Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="QuickIssueButton" Style="{StaticResource SuccessButton}" 
                                       Margin="0,0,10,0" Click="QuickIssueButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Выдать книгу"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="QuickReturnButton" Style="{StaticResource ActionButton}" 
                                       Click="QuickReturnButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Restore" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Вернуть книгу"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Область основного контента -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                 Margin="20" x:Name="ContentScrollViewer">
                        <Grid x:Name="ContentArea">
                            <Grid.RenderTransform>
                                <TranslateTransform/>
                            </Grid.RenderTransform>
                            
                            <!-- Начальный экран -->
                            <StackPanel x:Name="WelcomePanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial Kind="Library" Width="120" Height="120" 
                                                          Foreground="{StaticResource PrimaryColor}" 
                                                          HorizontalAlignment="Center" Margin="0,0,0,30">
                                    <iconPacks:PackIconMaterial.RenderTransform>
                                        <RotateTransform/>
                                    </iconPacks:PackIconMaterial.RenderTransform>
                                    <iconPacks:PackIconMaterial.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource RotatingIconAnimation}"/>
                                        </EventTrigger>
                                    </iconPacks:PackIconMaterial.Triggers>
                                </iconPacks:PackIconMaterial>

                                <TextBlock Text="Добро пожаловать в систему управления библиотекой!" 
                                          FontSize="24" FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextPrimaryColor}"
                                          HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                <TextBlock Text="Выберите раздел в боковом меню для начала работы" 
                                          FontSize="16" Foreground="{StaticResource TextSecondaryColor}"
                                          HorizontalAlignment="Center" Margin="0,0,0,30"/>

                                <!-- Быстрые действия -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource ActionButton}" 
                                           Padding="20,12" Margin="0,0,15,0"
                                           Click="BooksButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="BookOpenPageVariant" Width="20" Height="20" Margin="0,0,10,0"/>
                                            <TextBlock Text="Управление книгами"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource SuccessButton}" 
                                           Padding="20,12"
                                           Click="QuickIssueButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="Plus" Width="20" Height="20" Margin="0,0,10,0"/>
                                            <TextBlock Text="Выдать книгу"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>

                            <!-- Динамический контент будет добавляться сюда -->
                        </Grid>
                    </ScrollViewer>

                    <!-- Статусная строка -->
                    <Border Grid.Row="2" Background="#15FFFFFF" 
                           CornerRadius="0,0,16,16" Padding="20,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16" 
                                                          Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                                <TextBlock x:Name="StatusText" Text="Система готова к работе" 
                                          FontSize="12" Foreground="{StaticResource TextSecondaryColor}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Clock" Width="14" Height="14" 
                                                          Foreground="{StaticResource TextTertiaryColor}" Margin="0,0,5,0"/>
                                <TextBlock x:Name="TimeText" FontSize="12" 
                                          Foreground="{StaticResource TextTertiaryColor}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Кнопка закрытия окна -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
               Width="45" Height="45" Margin="30" Style="{StaticResource ErrorButton}"
               Click="CloseButton_Click">
            <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20"/>
        </Button>

        <!-- Кнопка минимизации -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
               Width="45" Height="45" Margin="85,30,30,30" Style="{StaticResource GlassButton}"
               Click="MinimizeButton_Click">
            <iconPacks:PackIconMaterial Kind="WindowMinimize" Width="20" Height="20"/>
        </Button>
    </Grid>
</Window>
