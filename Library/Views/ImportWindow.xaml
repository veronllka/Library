<Window x:Class="Library.Views.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Импорт данных - Библиотека" Height="650" Width="900"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" AllowDrop="True"
        Drop="Window_Drop" DragEnter="Window_DragEnter">

    <Window.Resources>
        <!-- Стили из главного окна -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="25" ShadowDepth="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#50FFFFFF" Offset="0"/>
                        <GradientStop Color="#30FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#70FFFFFF" Offset="0"/>
                                            <GradientStop Color="#50FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#30FFFFFF" Offset="0"/>
                                            <GradientStop Color="#10FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4CAF50" Offset="0"/>
                        <GradientStop Color="#45A049" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F44336" Offset="0"/>
                        <GradientStop Color="#D32F2F" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF9800" Offset="0"/>
                        <GradientStop Color="#F57C00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DropZoneStyle" TargetType="Border">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Фон -->
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="0.3"/>
                <GradientStop Color="#334155" Offset="0.7"/>
                <GradientStop Color="#475569" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Основной контент -->
        <Border Style="{StaticResource GlassCard}" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0" Background="#4CAF50" CornerRadius="15,15,0,0" Padding="25,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Upload" Width="30" Height="30" 
                                                      Foreground="White" Margin="0,0,15,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="ИМПОРТ ДАННЫХ" FontSize="20" FontWeight="Bold" 
                                         Foreground="White"/>
                                <TextBlock Text="Импортируйте данные из файлов в базу данных" FontSize="12" 
                                         Foreground="#E0FFFFFF"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" x:Name="CloseButton" Style="{StaticResource CancelButton}" 
                               Width="30" Height="30" Padding="0" Click="CloseButton_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Основное содержимое -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Выбор файла и формата -->
                        <Border Grid.Row="0" Style="{StaticResource GlassCard}" Padding="20" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Выбор файла -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📁 Выбор файла для импорта" FontSize="16" FontWeight="SemiBold"
                                             Foreground="White" Margin="0,0,0,15"/>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="FilePathTextBox" Grid.Column="0" 
                                               Background="#30FFFFFF" BorderBrush="#60FFFFFF" BorderThickness="1"
                                               Foreground="White" Padding="10,8" FontSize="14" Height="40"
                                               IsReadOnly="True" VerticalContentAlignment="Center"/>
                                        <Button x:Name="BrowseFileButton" Grid.Column="1" Content="Обзор..." 
                                               Style="{StaticResource ModernButton}" Width="100" Margin="5,0,0,0"
                                               Click="BrowseFileButton_Click"/>
                                    </Grid>

                                    <!-- Зона перетаскивания -->
                                    <Border x:Name="DropZone" Style="{StaticResource DropZoneStyle}" Height="120" AllowDrop="True"
                                           Drop="DropZone_Drop" DragEnter="DropZone_DragEnter" DragLeave="DropZone_DragLeave">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <iconPacks:PackIconMaterial Kind="CloudUpload" Width="40" Height="40" 
                                                                      Foreground="#CCFFFFFF" Margin="0,0,0,10"/>
                                            <TextBlock Text="Перетащите файл сюда" FontSize="14" FontWeight="SemiBold"
                                                     Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="или используйте кнопку 'Обзор...'" FontSize="12"
                                                     Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Настройки импорта -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="⚙️ Настройки импорта" FontSize="16" FontWeight="SemiBold"
                                             Foreground="White" Margin="0,0,0,15"/>

                                    <TextBlock Text="Тип данных:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="DataTypeComboBox" Style="{StaticResource ModernComboBox}" Margin="0,0,0,15">
                                        <ComboBoxItem Content="Книги" IsSelected="True"/>
                                        <ComboBoxItem Content="Авторы" IsEnabled="False"/>
                                        <ComboBoxItem Content="Читатели" IsEnabled="False"/>
                                        <ComboBoxItem Content="Издательства" IsEnabled="False"/>
                                        <ComboBoxItem Content="Жанры" IsEnabled="False"/>
                                    </ComboBox>

                                    <TextBlock Text="Формат файла:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="FormatComboBox" Style="{StaticResource ModernComboBox}" Margin="0,0,0,15">
                                        <ComboBoxItem Content="JSON" IsSelected="True"/>
                                        <ComboBoxItem Content="XML"/>
                                        <ComboBoxItem Content="CSV"/>
                                    </ComboBox>

                                    <Button x:Name="ValidateFileButton" Content="Проверить файл" 
                                           Style="{StaticResource PrimaryButton}" Margin="0,0,0,10"
                                           Click="ValidateFileButton_Click" IsEnabled="False"/>

                                    <!-- Информация о файле -->
                                    <Border Background="#20FFFFFF" CornerRadius="8" Padding="10" Margin="0,10,0,0">
                                        <StackPanel>
                                            <TextBlock Text="📋 Информация о файле:" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock x:Name="FileInfoTextBlock" Text="Файл не выбран" 
                                                     Foreground="#CCFFFFFF" FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Предварительный просмотр данных -->
                        <Border Grid.Row="1" Style="{StaticResource GlassCard}" Padding="20" Margin="0,0,0,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="👁️ Предварительный просмотр данных" FontSize="16" FontWeight="SemiBold"
                                         Foreground="White" Margin="0,0,0,15"/>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="200">
                                    <TextBlock x:Name="PreviewTextBlock" Text="Выберите файл для предварительного просмотра" 
                                             Foreground="#CCFFFFFF" FontSize="12" FontFamily="Consolas" TextWrapping="Wrap"
                                             Background="#10FFFFFF" Padding="15"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Результаты импорта -->
                        <Border Grid.Row="2" Style="{StaticResource GlassCard}" Padding="20" x:Name="ResultsPanel" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="📊 Результаты импорта" FontSize="16" FontWeight="SemiBold"
                                         Foreground="White" Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#204CAF50" CornerRadius="8" Padding="15" Margin="0,0,5,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <iconPacks:PackIconMaterial Kind="CheckCircle" Width="30" Height="30" 
                                                                      Foreground="#4CAF50" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="SuccessCountTextBlock" Text="0" FontSize="20" FontWeight="Bold"
                                                     Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Успешно" FontSize="12" 
                                                     Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Background="#20F44336" CornerRadius="8" Padding="15" Margin="5,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <iconPacks:PackIconMaterial Kind="AlertCircle" Width="30" Height="30" 
                                                                      Foreground="#F44336" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="ErrorCountTextBlock" Text="0" FontSize="20" FontWeight="Bold"
                                                     Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Ошибки" FontSize="12" 
                                                     Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="#20FF9800" CornerRadius="8" Padding="15" Margin="5,0,0,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <iconPacks:PackIconMaterial Kind="Information" Width="30" Height="30" 
                                                                      Foreground="#FF9800" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TotalCountTextBlock" Text="0" FontSize="20" FontWeight="Bold"
                                                     Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Всего" FontSize="12" 
                                                     Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>

                <!-- Нижняя панель с прогрессом и кнопками -->
                <Border Grid.Row="2" Background="#15FFFFFF" CornerRadius="0,0,15,15" Padding="25,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Прогресс бар -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15" x:Name="ProgressPanel" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ProgressTextBlock" Grid.Column="0" Text="Импорт данных..." 
                                         Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                                <TextBlock x:Name="ProgressPercentTextBlock" Grid.Column="1" Text="0%" 
                                         Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                            </Grid>
                            <ProgressBar x:Name="ImportProgressBar" Style="{StaticResource ModernProgressBar}" 
                                       Margin="0,5,0,0" Value="0" Maximum="100"/>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16" 
                                                          Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock x:Name="StatusTextBlock" Text="Готов к импорту" 
                                         Foreground="#CCFFFFFF" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button x:Name="ClearButton" Grid.Column="2" Content="Очистить" 
                                   Style="{StaticResource WarningButton}" Padding="15,8" Margin="0,0,10,0"
                                   Click="ClearButton_Click"/>

                            <Button x:Name="ImportButton" Grid.Column="3" 
                                   Style="{StaticResource SuccessButton}" Padding="20,10" Margin="0,0,10,0"
                                   Click="ImportButton_Click" IsEnabled="False">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Upload" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Начать импорт"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button x:Name="CancelButton" Grid.Column="4" Content="Закрыть" 
                                   Style="{StaticResource CancelButton}" Padding="20,10"
                                   Click="CancelButton_Click"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window> 