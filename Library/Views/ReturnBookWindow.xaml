<Window x:Class="Library.Views.ReturnBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="Возврат книги" Height="550" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Упрощенные анимации -->
            <Storyboard x:Key="DialogEnterAnimation">
                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                From="0" To="1" Duration="0:0:0.2" />
            </Storyboard>
            
            <!-- Стиль для секундарной кнопки -->
            <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#8B5CF6" Offset="0"/>
                            <GradientStop Color="#7C3AED" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
            </Style>
            
            <!-- Стиль для основной кнопки -->
            <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            </Style>
            
            <!-- Стиль для конвертера статуса -->
            <local:StatusColorConverter x:Key="StatusColorConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource DialogEnterAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    
    <!-- Полупрозрачный фон -->
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#AA000000"/>
        </Grid.Background>
        
        <Border Style="{StaticResource GlassCard}" Margin="20">
            <Grid>
                <!-- Заголовок -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="{StaticResource PrimaryGradient}" Grid.Row="0"
                       CornerRadius="16,16,0,0" Padding="20">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Restore" Width="32" Height="32"
                                                      Foreground="{StaticResource AccentColor}" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Возврат книги" FontSize="20" FontWeight="SemiBold"
                                          Foreground="{StaticResource TextPrimaryColor}"/>
                                <TextBlock Text="Выберите книгу для возврата из списка активных выдач"
                                          FontSize="12" Foreground="{StaticResource TextSecondaryColor}"/>
                            </StackPanel>
                        </StackPanel>

                        <Button HorizontalAlignment="Right" Style="{StaticResource GlassButton}"
                               Click="CloseButton_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Основное содержимое -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Поиск -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource GlassCard}" Padding="15,10" Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <iconPacks:PackIconMaterial Kind="Magnify" Width="20" Height="20"
                                                         Foreground="{StaticResource TextSecondaryColor}" Grid.Column="0"
                                                         VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent"
                                         BorderThickness="0" Foreground="{StaticResource TextPrimaryColor}"
                                         FontSize="14" Text="Поиск по названию книги или читателю..."
                                         GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"
                                         TextChanged="SearchBox_TextChanged" VerticalContentAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Button Grid.Column="1" Margin="10,0,0,0" 
                                Style="{StaticResource PrimaryButton}" Click="RefreshButton_Click">
                            <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                        </Button>
                    </Grid>

                    <!-- Таблица выдач -->
                    <DataGrid x:Name="LoansDataGrid" Grid.Row="1"
                             Style="{StaticResource DataGridStyle}"
                             AutoGenerateColumns="False" SelectionMode="Single"
                             MouseDoubleClick="LoansDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ВыдачаID}" Width="60"/>
                            <DataGridTextColumn Header="Книга" Binding="{Binding КнигаНазвание}" Width="*"/>
                            <DataGridTextColumn Header="Читатель" Binding="{Binding ЧитательИмя}" Width="200"/>
                            <DataGridTextColumn Header="Выдана" Binding="{Binding ДатаВыдачи, StringFormat=dd.MM.yyyy}" Width="120"/>
                            <DataGridTextColumn Header="До" Binding="{Binding ДатаВозврата, StringFormat=dd.MM.yyyy}" Width="120"/>
                            <DataGridTemplateColumn Header="Статус" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Статус}" 
                                               Foreground="{Binding Статус, Converter={StaticResource StatusColorConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Нижние кнопки -->
                <Grid Grid.Row="2" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText" Text="Выберите книгу для возврата" VerticalAlignment="Center"
                              Foreground="{StaticResource TextSecondaryColor}"/>

                    <Button Grid.Column="1" Style="{StaticResource PrimaryButton}"
                           Content="Вернуть выбранную книгу" Click="ReturnBookButton_Click"
                           Margin="0,0,10,0" Padding="15,10"/>

                    <Button Grid.Column="2" Style="{StaticResource SecondaryButton}"
                           Content="Отмена" Click="CancelButton_Click"
                           Padding="15,10"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window> 