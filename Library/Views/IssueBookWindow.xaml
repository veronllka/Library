<Window x:Class="Library.Views.IssueBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Выдача книги" MinHeight="700" MinWidth="800" MaxWidth="1000" MaxHeight="800"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        SizeToContent="Manual">

    <Window.Resources>
        <!-- Liquid Glass стили -->
        <Style x:Key="GlassButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#60FFFFFF" Offset="0"/>
                                            <GradientStop Color="#40FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#30FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press">
                                    <Grid>
                                        <ContentPresenter x:Name="ContentSite"
                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                        Margin="10,0,25,0"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"/>
                                        <Path x:Name="Arrow" 
                                            Fill="White"
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,10,0"
                                            Data="M 0 0 L 4 4 L 8 0 Z"/>
                                    </Grid>
                                </ToggleButton>
                                <Popup x:Name="Popup"
                                     Placement="Bottom"
                                     IsOpen="{TemplateBinding IsDropDownOpen}"
                                     AllowsTransparency="True">
                                    <Border Background="#E0000000" 
                                          BorderBrush="#60FFFFFF" 
                                          BorderThickness="1"
                                          CornerRadius="8">
                                        <ScrollViewer MaxHeight="200">
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#30FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- Анимации для окна выдачи -->
        <Storyboard x:Key="WindowEnterAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" 
                           From="0.95" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.1"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" 
                           From="0.95" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.1"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="BookFloatingAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                           From="0" To="-8" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="FormSlideAnimation">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                           From="15" To="0" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowEnterAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.RenderTransform>
            <ScaleTransform/>
        </Grid.RenderTransform>

        <!-- Фон -->
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="0.5"/>
                <GradientStop Color="#334155" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Частицы фона -->
        <Canvas IsHitTestVisible="False">
            <Ellipse Width="120" Height="120" Fill="{StaticResource PrimaryColor}" 
                     Canvas.Left="-20" Canvas.Top="50" Opacity="0.08">
                <Ellipse.RenderTransform>
                    <TranslateTransform/>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource BookFloatingAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Ellipse Width="80" Height="80" Fill="{StaticResource SecondaryColor}" 
                     Canvas.Right="-10" Canvas.Bottom="80" Opacity="0.12"/>
            <Ellipse Width="60" Height="60" Fill="{StaticResource AccentColor}" 
                     Canvas.Left="200" Canvas.Bottom="-10" Opacity="0.15"/>
        </Canvas>

        <!-- Адаптивный контейнер -->
        <Viewbox Stretch="Uniform" MaxWidth="800" MaxHeight="700" Margin="40">
            <Border Style="{StaticResource GlassCard}" Width="800" Height="700" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" 
                           CornerRadius="16,16,0,0" Padding="40,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="BookPlus" Width="32" Height="32" 
                                                          Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,15,0">
                                    <iconPacks:PackIconMaterial.RenderTransform>
                                        <TranslateTransform/>
                                    </iconPacks:PackIconMaterial.RenderTransform>
                                    <iconPacks:PackIconMaterial.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource BookFloatingAnimation}"/>
                                        </EventTrigger>
                                    </iconPacks:PackIconMaterial.Triggers>
                                </iconPacks:PackIconMaterial>
                                
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Выдача книги" FontSize="24" FontWeight="Bold" 
                                              Foreground="{StaticResource TextPrimaryColor}"/>
                                    <TextBlock Text="Оформление выдачи книги читателю" FontSize="14" 
                                              Foreground="#E0FFFFFF"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" Style="{StaticResource ErrorButton}" 
                                   Width="40" Height="40" Click="CloseButton_Click">
                                <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Основное содержимое -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                 HorizontalScrollBarVisibility="Disabled" Padding="40,30">
                        <Grid>
                            <Grid.RenderTransform>
                                <TranslateTransform/>
                            </Grid.RenderTransform>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource FormSlideAnimation}"/>
                                </EventTrigger>
                            </Grid.Triggers>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>

                            <!-- Форма выдачи -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="📋 Данные выдачи" FontSize="18" FontWeight="SemiBold"
                                          Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,0,20"/>

                                <!-- Выбор читателя -->
                                <TextBlock Text="Читатель" FontSize="14" FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,8"/>
                                <ComboBox x:Name="ReaderComboBox" Height="50" Margin="0,0,0,20">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="Account" Width="16" Height="16" 
                                                                          Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1} {2} (ID: {3})">
                                                            <Binding Path="Фамилия"/>
                                                            <Binding Path="Имя"/>
                                                            <Binding Path="Отчество"/>
                                                            <Binding Path="ЧитательID"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- Выбор книги -->
                                <TextBlock Text="Книга" FontSize="14" FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,8"/>
                                <ComboBox x:Name="BookComboBox" Height="50" Margin="0,0,0,20">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="Book" Width="16" Height="16" 
                                                                          Foreground="{StaticResource PrimaryColor}" Margin="0,0,8,0"/>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} - {1} (ID: {2})">
                                                            <Binding Path="Название"/>
                                                            <Binding Path="АвторИмя"/>
                                                            <Binding Path="КнигаID"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- Дата выдачи -->
                                <TextBlock Text="Дата выдачи" FontSize="14" FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,8"/>
                                <DatePicker x:Name="IssueDatePicker" Height="50" Margin="0,0,0,20"/>

                                <!-- Дата возврата -->
                                <TextBlock Text="Плановая дата возврата" FontSize="14" FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,8"/>
                                <DatePicker x:Name="ReturnDatePicker" Height="50" Margin="0,0,0,20"/>

                                <!-- Дополнительные опции -->
                                <Border Style="{StaticResource GlassCard}" Padding="20" Margin="0,10,0,0">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <iconPacks:PackIconMaterial Kind="Information" Width="18" Height="18" 
                                                                      Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                            <TextBlock Text="Дополнительные параметры" FontSize="14" FontWeight="SemiBold"
                                                      Foreground="{StaticResource TextPrimaryColor}"/>
                                        </StackPanel>

                                        <CheckBox x:Name="ExtendedPeriodCheckBox" Content="Продлённый срок выдачи (30 дней)" 
                                                 Foreground="{StaticResource TextSecondaryColor}" Margin="0,5"/>
                                        <CheckBox x:Name="NotificationCheckBox" Content="Отправить уведомление читателю" 
                                                 Foreground="{StaticResource TextSecondaryColor}" Margin="0,5" IsChecked="True"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Информационная панель -->
                            <Border Grid.Column="2" Style="{StaticResource GlassCard}" Padding="25">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                        <iconPacks:PackIconMaterial Kind="Library" Width="24" Height="24" 
                                                                  Foreground="{StaticResource PrimaryColor}" Margin="0,0,10,0"/>
                                        <TextBlock Text="Информация" FontSize="16" FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryColor}"/>
                                    </StackPanel>

                                    <!-- Статистика библиотеки -->
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="📊 Статистика:" FontSize="14" FontWeight="Medium"
                                                  Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,10"/>

                                        <Border Background="#15FFFFFF" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Kind="Book" Width="14" Height="14" 
                                                                              Foreground="{StaticResource PrimaryColor}" Margin="0,0,8,0"/>
                                                    <TextBlock x:Name="TotalBooksInfo" Text="Всего книг: 0" FontSize="12"
                                                              Foreground="{StaticResource TextSecondaryColor}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#15FFFFFF" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="HandHeart" Width="14" Height="14" 
                                                                          Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                                                <TextBlock x:Name="ActiveLoansInfo" Text="Активных выдач: 0" FontSize="12"
                                                          Foreground="{StaticResource TextSecondaryColor}"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#15FFFFFF" CornerRadius="8" Padding="12">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="AccountGroup" Width="14" Height="14" 
                                                                          Foreground="{StaticResource SecondaryColor}" Margin="0,0,8,0"/>
                                                <TextBlock x:Name="TotalReadersInfo" Text="Читателей: 0" FontSize="12"
                                                          Foreground="{StaticResource TextSecondaryColor}"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Правила библиотеки -->
                                    <StackPanel>
                                        <TextBlock Text="📜 Правила выдачи:" FontSize="14" FontWeight="Medium"
                                                  Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,10"/>

                                        <Border Background="#15FFFFFF" CornerRadius="8" Padding="15">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <iconPacks:PackIconMaterial Kind="Clock" Width="14" Height="14" 
                                                                              Foreground="{StaticResource WarningColor}" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Стандартный срок: 14 дней" FontSize="11"
                                                              Foreground="{StaticResource TextTertiaryColor}"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <iconPacks:PackIconMaterial Kind="BookMultiple" Width="14" Height="14" 
                                                                              Foreground="{StaticResource WarningColor}" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Максимум: 3 книги" FontSize="11"
                                                              Foreground="{StaticResource TextTertiaryColor}"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <iconPacks:PackIconMaterial Kind="Restore" Width="14" Height="14" 
                                                                              Foreground="{StaticResource WarningColor}" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Продление: 1 раз" FontSize="11"
                                                              Foreground="{StaticResource TextTertiaryColor}"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Kind="CurrencyUsd" Width="14" Height="14" 
                                                                              Foreground="{StaticResource ErrorColor}" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Штраф: 10₽ за день" FontSize="11"
                                                              Foreground="{StaticResource TextTertiaryColor}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <!-- Кнопки действий -->
                    <Border Grid.Row="2" Background="#15FFFFFF" CornerRadius="0,0,16,16" Padding="40,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Статус -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16" 
                                                          Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                                <TextBlock x:Name="StatusTextBlock" Text="Заполните все поля для выдачи книги" 
                                          FontSize="12" Foreground="{StaticResource TextSecondaryColor}"/>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Style="{StaticResource GlassButton}" Margin="0,0,15,0" 
                                       Padding="20,12" Click="CancelButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Cancel" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Отмена"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="IssueButton" Style="{StaticResource SuccessButton}" 
                                       Padding="20,12" Click="IssueButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Check" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Выдать книгу"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window> 