<Window x:Class="Library.Views.TestAdministrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Тестовое окно администрирования" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource MahApps.Styles.Window}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2E3440" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Database" 
                                            Width="32" Height="32" 
                                            Foreground="#81C784" 
                                            Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="Тестовое окно администрирования MS SQL Server" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="ServerInfoText" 
                               Text="Проверка подключения..." 
                               FontSize="12" 
                               Foreground="#B0BEC5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Состояние подключения:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="ConnectionStatusText" 
                           Text="Инициализация..." 
                           FontSize="14" 
                           Margin="0,0,0,20"/>

                <Button x:Name="TestConnectionButton"
                        Content="Проверить подключение к SQL Server"
                        Width="300"
                        Height="40"
                        Margin="0,0,0,10"
                        Style="{DynamicResource MahApps.Styles.Button.Accent}"
                        Click="TestConnectionButton_Click"/>

                <TextBlock x:Name="TestResultText"
                           Text=""
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2" Background="#37474F">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к тестированию" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 