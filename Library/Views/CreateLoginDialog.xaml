<Window x:Class="Library.Views.CreateLoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Создание логина" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource MahApps.Styles.Window}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <iconPacks:PackIconMaterial Kind="AccountPlus" 
                                        Width="32" Height="32" 
                                        Foreground="#2196F3" 
                                        Margin="0,0,15,0"/>
            <StackPanel>
                <TextBlock Text="Создание нового логина" 
                           FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Укажите параметры для нового логина SQL Server" 
                           FontSize="12" Foreground="#666"/>
            </StackPanel>
        </StackPanel>

        <!-- Параметры -->
        <StackPanel Grid.Row="1">
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Имя логина:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="LoginNameTextBox" 
                         FontSize="14" Height="35"
                         Text="NewLogin"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             FontSize="14" Height="35"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Подтверждение пароля:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             FontSize="14" Height="35"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="База данных по умолчанию:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="DefaultDatabaseComboBox" 
                          FontSize="14" Height="35"
                          IsEditable="True"
                          Text="Library">
                    <ComboBoxItem Content="master"/>
                    <ComboBoxItem Content="Library"/>
                    <ComboBoxItem Content="tempdb"/>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <CheckBox x:Name="IsServerAdminCheckBox" 
                          Content="Администратор сервера (sysadmin)" 
                          FontSize="14"/>
                <TextBlock Text="⚠️ Даёт полные права администратора сервера" 
                           FontSize="11" Foreground="#FF9800" 
                           Margin="20,5,0,0"
                           Visibility="{Binding IsChecked, ElementName=IsServerAdminCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CreateButton" 
                    Content="Создать" 
                    Width="100" Height="35" 
                    Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                    Click="CreateButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Width="100" Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 