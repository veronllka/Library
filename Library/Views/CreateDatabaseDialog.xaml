<Window x:Class="Library.Views.CreateDatabaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Создание базы данных" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource MahApps.Styles.Window}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <iconPacks:PackIconMaterial Kind="DatabasePlus" 
                                        Width="32" Height="32" 
                                        Foreground="#4CAF50" 
                                        Margin="0,0,15,0"/>
            <StackPanel>
                <TextBlock Text="Создание новой базы данных" 
                           FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Укажите параметры для новой базы данных" 
                           FontSize="12" Foreground="#666"/>
            </StackPanel>
        </StackPanel>

        <!-- Параметры -->
        <StackPanel Grid.Row="1">
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Название базы данных:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="DatabaseNameTextBox" 
                         FontSize="14" Height="35"
                         Text="NewDatabase"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Начальный размер (МБ):" FontWeight="Bold" Margin="0,0,0,5"/>
                <mah:NumericUpDown x:Name="InitialSizeNumeric" 
                                   Value="100" 
                                   Minimum="1" 
                                   Maximum="10000"
                                   Height="35"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Автоувеличение (МБ):" FontWeight="Bold" Margin="0,0,0,5"/>
                <mah:NumericUpDown x:Name="GrowthSizeNumeric" 
                                   Value="10" 
                                   Minimum="1" 
                                   Maximum="1000"
                                   Height="35"/>
            </StackPanel>

            <StackPanel>
                <CheckBox x:Name="CreateSampleDataCheckBox" 
                          Content="Создать примерные данные" 
                          FontSize="14"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CreateButton" 
                    Content="Создать" 
                    Width="100" Height="35" 
                    Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                    Click="CreateButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Width="100" Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 