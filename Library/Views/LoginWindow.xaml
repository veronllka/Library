<Window x:Class="Library.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Библиотека - Вход в систему" MinHeight="650" MinWidth="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        SizeToContent="Manual">

    <Window.Resources>
        <!-- Liquid Glass стили -->
        <Style x:Key="GlassButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#60FFFFFF" Offset="0"/>
                                            <GradientStop Color="#40FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#30FFFFFF" Offset="0"/>
                                            <GradientStop Color="#10FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="GlassTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CaretBrush" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="15" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Effect="{TemplateBinding Effect}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="GlassPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="15" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Effect="{TemplateBinding Effect}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Анимации загрузки -->
        <Storyboard x:Key="LoginFormLoadAnimation">
            <DoubleAnimation Storyboard.TargetName="LoginCard" 
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LoginCard" 
                           Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                           From="0.92" To="1" Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.1"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LoginCard" 
                           Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                           From="0.92" To="1" Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.1"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="ParticleAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:30"/>
        </Storyboard>

        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.4" To="0.7" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                           From="1" To="1.05" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                           From="1" To="1.05" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="FloatAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                           From="0" To="-25" Duration="0:0:4">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                           From="0" To="15" Duration="0:0:5">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LoginFormLoadAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <!-- Основной фон с градиентом -->
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="0.4"/>
                <GradientStop Color="#334155" Offset="0.8"/>
                <GradientStop Color="#475569" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Анимированные частицы фона -->
        <Canvas IsHitTestVisible="False">
            <!-- Большие элементы -->
            <Ellipse Width="250" Height="250" Fill="{StaticResource PrimaryColor}" 
                     Canvas.Left="50" Canvas.Top="80" Opacity="0.08">
                <Ellipse.RenderTransform>
                    <RotateTransform CenterX="125" CenterY="125"/>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource ParticleAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Ellipse Width="180" Height="180" Fill="{StaticResource SecondaryColor}" 
                     Canvas.Right="100" Canvas.Top="150" Opacity="0.12">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Ellipse Width="150" Height="150" Fill="{StaticResource AccentColor}" 
                     Canvas.Left="500" Canvas.Bottom="120" Opacity="0.15">
                <Ellipse.RenderTransform>
                    <TranslateTransform/>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FloatAnimation}"/>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <!-- Маленькие частицы -->
            <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryLightColor}" 
                     Canvas.Left="250" Canvas.Top="60" Opacity="0.4"/>
            <Ellipse Width="25" Height="25" Fill="{StaticResource SecondaryColor}" 
                     Canvas.Right="180" Canvas.Bottom="180" Opacity="0.3"/>
            <Ellipse Width="35" Height="35" Fill="{StaticResource AccentColor}" 
                     Canvas.Left="180" Canvas.Bottom="250" Opacity="0.35"/>
            <Ellipse Width="45" Height="45" Fill="{StaticResource PrimaryColor}" 
                     Canvas.Right="350" Canvas.Top="90" Opacity="0.25"/>
        </Canvas>

        <!-- Основная карточка входа - АДАПТИВНАЯ -->
        <Viewbox Stretch="Uniform" MaxWidth="450" MaxHeight="600" Margin="50">
            <Border x:Name="LoginCard" Style="{StaticResource GlassCard}" 
                    Width="450" Height="600" Padding="50,40">
                <Border.RenderTransform>
                    <ScaleTransform/>
                </Border.RenderTransform>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Заголовок -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                                <iconPacks:PackIconMaterial Kind="Library" Width="60" Height="60" 
                                                          Foreground="{StaticResource PrimaryColor}" Margin="0,0,15,0">
                                    <iconPacks:PackIconMaterial.RenderTransform>
                                        <RotateTransform/>
                                    </iconPacks:PackIconMaterial.RenderTransform>
                                    <iconPacks:PackIconMaterial.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                                                                   From="0" To="360" Duration="0:0:10"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </iconPacks:PackIconMaterial.Triggers>
                                </iconPacks:PackIconMaterial>
                                
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="БИБЛИОТЕКА" FontSize="28" FontWeight="Bold" 
                                              Foreground="{StaticResource TextPrimaryColor}">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="{Binding Source={StaticResource PrimaryColor}, Path=Color}" 
                                                            BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text="Система управления" FontSize="14" 
                                              Foreground="{StaticResource TextSecondaryColor}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Форма входа -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Логин" FontSize="14" FontWeight="Medium"
                                      Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="LoginTextBox" Style="{StaticResource GlassTextBox}"
                                        Height="50" Margin="0"/>
                                <TextBlock x:Name="LoginPlaceholder" Text="Введите логин" 
                                         Foreground="#94A3B8" FontSize="16" 
                                         Margin="15,0,50,0" VerticalAlignment="Center"
                                         IsHitTestVisible="False" Panel.ZIndex="-1"/>
                                <iconPacks:PackIconMaterial Kind="Account" Width="20" Height="20" 
                                                          Foreground="{StaticResource PrimaryColor}" 
                                                          HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            </Grid>

                            <TextBlock Text="Пароль" FontSize="14" FontWeight="Medium"
                                      Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,8"/>
                            
                            <Grid>
                                <PasswordBox x:Name="PasswordBox" Height="50" Style="{StaticResource GlassPasswordBox}"/>
                                <TextBox x:Name="PasswordTextBox" Height="50" Style="{StaticResource GlassTextBox}" 
                                       Visibility="Collapsed"/>
                                <TextBlock x:Name="PasswordPlaceholder" Text="Введите пароль" 
                                         Foreground="#94A3B8" FontSize="16" 
                                         Margin="15,0,50,0" VerticalAlignment="Center"
                                         IsHitTestVisible="False" Panel.ZIndex="-1"/>
                                <Button x:Name="ShowPasswordButton" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Width="35" Height="35" Margin="0,0,10,0"
                                       Background="#F3F4F6" BorderThickness="1" BorderBrush="#D1D5DB"
                                       Cursor="Hand" Click="ShowPasswordButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}"
                                                               CornerRadius="6">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <iconPacks:PackIconMaterial x:Name="EyeIcon" Kind="Eye" Width="20" Height="20" 
                                                              Foreground="#6B7280"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Панель капчи (скрыта по умолчанию) -->
                        <StackPanel x:Name="CaptchaPanel" Visibility="Collapsed" Margin="0,0,0,20">
                            <TextBlock Text="Для продолжения введите код с картинки:" 
                                      FontSize="14" FontWeight="Medium"
                                      Foreground="{StaticResource ErrorColor}" 
                                      Margin="0,0,0,10" TextAlignment="Center"/>
                            
                            <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" 
                                   CornerRadius="8" Height="90" Margin="0,0,0,15">
                                <Grid>
                                    <Image x:Name="CaptchaImage" Stretch="Uniform" Margin="5"/>
                                    <Button x:Name="RefreshCaptchaButton" 
                                           HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Width="30" Height="30" Margin="5"
                                           Background="#F3F4F6" BorderThickness="1" BorderBrush="#D1D5DB"
                                           Cursor="Hand" Click="RefreshCaptchaButton_Click"
                                           ToolTip="Обновить капчу">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                   CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16" 
                                                                  Foreground="#6B7280"/>
                                    </Button>
                                </Grid>
                            </Border>
                            
                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="CaptchaTextBox" Style="{StaticResource GlassTextBox}"
                                        Height="50" MaxLength="5" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="CaptchaPlaceholder" Text="Введите код" 
                                         Foreground="#94A3B8" FontSize="16" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         IsHitTestVisible="False" Panel.ZIndex="-1"/>
                            </Grid>
                        </StackPanel>

                        <!-- Кнопка входа -->
                        <Button x:Name="LoginButton" Style="{StaticResource ActionButton}" 
                               Height="55" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"
                               Click="LoginButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Login" Width="20" Height="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Войти в систему"/>
                            </StackPanel>
                        </Button>

                        <!-- Информационная панель для попыток -->
                        <StackPanel x:Name="AttemptsPanel" Visibility="Collapsed" Margin="0,0,0,15">
                            <Border Background="#FEF3C7" BorderBrush="#F59E0B" BorderThickness="1" 
                                   CornerRadius="8" Padding="15,10">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="AlertCircle" Width="20" Height="20" 
                                                              Foreground="#F59E0B" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="AttemptsText" Text="Осталось попыток: 2" 
                                             FontSize="14" Foreground="#92400E"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>


                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Viewbox>

        <!-- Кнопка закрытия -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
               Width="45" Height="45" Margin="25" Style="{StaticResource ErrorButton}"
               Click="CloseButton_Click">
            <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20"/>
        </Button>
    </Grid>
</Window> 