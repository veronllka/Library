<Window x:Class="Library.Views.RestoreDatabaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Восстановление базы данных" Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource MahApps.Styles.Window}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <iconPacks:PackIconMaterial Kind="DatabaseRefresh" 
                                        Width="32" Height="32" 
                                        Foreground="#FF9800" 
                                        Margin="0,0,15,0"/>
            <StackPanel>
                <TextBlock Text="Восстановление базы данных" 
                           FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Укажите название для восстанавливаемой БД" 
                           FontSize="12" Foreground="#666"/>
            </StackPanel>
        </StackPanel>

        <!-- Параметры -->
        <StackPanel Grid.Row="1">
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Название базы данных:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="DatabaseNameTextBox" 
                         FontSize="14" Height="35"
                         Text="RestoredDatabase"/>
            </StackPanel>

            <StackPanel>
                <CheckBox x:Name="ReplaceExistingCheckBox" 
                          Content="Заменить существующую базу данных" 
                          FontSize="14"/>
                <TextBlock Text="⚠️ Внимание: существующие данные будут потеряны!" 
                           FontSize="11" Foreground="#F44336" 
                           Margin="20,5,0,0"
                           Visibility="{Binding IsChecked, ElementName=ReplaceExistingCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="RestoreButton" 
                    Content="Восстановить" 
                    Width="120" Height="35" 
                    Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                    Click="RestoreButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Width="100" Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 